include ../mixin/title
include ../mixin/section-menu
include ../mixin/subtitle
include ../mixin/button
include ../mixin/arroy
include ../mixin/link

- let cashBoxLinks = [{adress: "#", name: "О кассе", className: "section-menu_link section-menu_link--active"}, {adress: "#", name: "Видео", className: "section-menu_link"}, {adress: "#", name: "Характеристики", className: "section-menu_link"}]

.cashbox
  .container
    +title("Наши касса", "cashbox_title")
